{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="col ml-2">
        <div class="col mb-2">
                <h4>{{ form_label(form.title) }}</h4>
                <div>{{ form_widget(form.title,{ 'attr': {'style': 'width: 500px'}}) }}</div>
        </div>
        <div class="col mb-2">
                <h4>{{ form_label(form.description) }}</h4>
                <div>{{ form_widget(form.description,{ 'attr': {'style': 'width: 500px'}}) }}</div>
        </div>
        <div class="col mb-2">
                <h4>{{ form_label(form.body) }}</h4>
                <div>{{ form_widget(form.body,{ 'attr': {'style': 'width: 100%'}}) }}</div>
        </div>
        <div class="col mb-2">
                <h4>{{ form_label(form.picture) }} url</h4>
                <div>{{ form_widget(form.picture,{ 'attr': {'style': 'width: 500px'}}) }}</div>
        </div>
        <div class="col mb-2">
        <h4>{{ form_label(form.categories) }}</h4>
        <div class="mb-2">Select categories using Ctrl + Left Mouse Click</div>
        <div>{{ form_widget(form.categories) }}</div>
    </div>
        <div class="col mb-2">
                <h4>{{ form_label(form.date) }}</h4>
                <div>{{ form_widget(form.date) }}</div>
        </div>
    </div>
    <button class="btn btn-primary ml-4">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}