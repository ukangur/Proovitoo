{% extends 'base.html.twig' %}

{% block title %}Category maker{% endblock %}

{% block body %}
    <h1 class="ml-2">Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>
                    <a class="btn btn-primary ml-4" href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a class="btn btn-primary ml-4" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary ml-4 mb-4" href="{{ path('category_new') }}">Create new</a>
{% endblock %}
