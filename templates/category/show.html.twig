{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1 class="ml-2">Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
        </tbody>
    </table>

    <div><a class="btn btn-primary ml-4" href="{{ path('category_edit', {'id': category.id}) }}">edit</a></div>

    {{ include('category/_delete_form.html.twig') }}

    <div><a class="btn btn-primary ml-4" href="{{ path('category_index') }}">back to list</a></div>
{% endblock %}
