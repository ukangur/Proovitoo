{% extends 'base.html.twig'%}

{% block title %}Proovitoo artiklid {% endblock %}
{% block body %}
<div align="center" class="col ml-2 mr-2">
    <h1><a>{{category.title}}</a></h1>

    {% if articles %}
    <div align="center" class="container">
        <div align="center" class="row ml-2 mr-2">
                {% for article in articles %}
                {% if category.title in article.categories %}
                    <div align="center" class="card text-dark mb-4">
                            <div class="card-body">
                                    <div><img src={{article.picture}} alt="" height="200" width="300"></div>
                                        <div><a href="/article/{{article.id}}">{{article.title}}</a></div>
                                        <div><a>{{article.description}}</a></div>
                                    </div>
                                </div>
              {% endif %}
            {% endfor %}

        </div>
    </div>
    {% else %}
    <p>No articles to display</p>
    {% endif %}
</div>

{% endblock %}