{% extends 'base.html.twig'%}

{% block title %} {{ article.title }} {% endblock %}

{% block body %}
<div align="center" class="container">
        <img src="{{ article.picture }}" height="500" width="relative">
      
<h1 class="mb-2 mt-4">{{ article.title }}</h1>
<div class="mb-2"><a>Published: {{article.date|date("d/m/Y")}}</a></div>
<div class="mb-4"><a>Categories: {{ article.categories|join(', ') }}</a></div>
<p align="justify">{{ article.body }}</p>
<hr>
<button class="btn btn-primary mb-4" onclick="history.go(-1)">Go back</button>
</div>
{% endblock %}